<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:paddingTop="0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Participants"
            android:id="@+id/participants"
            android:textSize="25dp"/>

        <Spinner
            android:layout_width="37dp"
            android:layout_height="40dp"
            android:id="@+id/spinner"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Total Cost: 0 kr"
            android:id="@+id/total_cost"
            android:textSize="25dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Menu"
        android:paddingLeft="10dp"
        android:id="@+id/choose_menu"
        android:textSize="45dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starter"
        android:id="@+id/starter"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:paddingLeft="10dp">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/bakedbrie_button"
            android:adjustViewBounds="true"
            android:src="@drawable/bakedbrie"
            android:scaleType="center"
            />
        <!-- android:background="@drawable/bakedbrie" -->
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Course"
        android:id="@+id/main_course"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.32"
        android:weightSum="1"
        android:paddingLeft="10dp">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/meatballs_button"
            android:adjustViewBounds="true"
            android:src="@drawable/meatballs"
            />
        <!--android:background="@drawable/meatballs"-->
    </LinearLayout>
</LinearLayout>